{% extends 'base.html.twig' %}

{% block title %}La boutique Fran√ßaise - Nos produits {% endblock %}

{% block content %}

    <div class="row">
        <div class="col-md-3">
            <h3>Filtrer</h3>
            {{ form(searchform) }}
        </div>
        <div class="col-md-9">
            <div class="row">
                {% for product in products %}
                    <div class="col-md-4">
                        <div class="product-item text-center mb-4">
                            <a href="{{ path('product', {'slug': product.slug}) }}"><img src="assets/img/{{ product.illustration }}" alt="" class="img-fluid"></a>
                            <h5> {{ product.name }}</h5>
                            <span class="product-subtitle">{{ product.subtitle }}</span><br>
                            <span class="product-price">{{ (product.price / 100)|number_format(2) }} EUR</span>
                        </div>

                    </div>
                {% endfor %}
            </div></div>
    </div>



{% endblock %}
